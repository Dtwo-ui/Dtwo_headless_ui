{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": ["node_modules", "dist/**/*"],
  "include": [".eslintrc.cjs"]
}
