{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node", "@testing-library/jest-dom", "vitest/globals"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "vitest.workspace.ts", "**/dist/**/*"],
  "include": [".eslintrc.cjs", "rollup.config.js"]
}
