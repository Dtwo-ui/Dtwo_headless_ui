{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["./.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["clean", "^build"],
      "outputs": [".next/", "!.next/cache/**"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
